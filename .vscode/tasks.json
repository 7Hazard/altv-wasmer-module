        {
            "label": "rust bindgen Client",
            "type": "shell",
            "command": "bindgen",
            "args": [
                "${workspaceFolder}/../altv-capi/client/altv-capi.hpp",
                "-o${workspaceFolder}/client/src/altv_capi.rs"
            ],
            "problemMatcher": [],
            "group": "build",
        },
        {
            "label": "rust bindgen Server",
            "type": "shell",
            "command": "bindgen",
            "args": [
                "${workspaceFolder}/../altv-capi/server/altv-capi.hpp",
                "-o${workspaceFolder}/server/src/altv_capi.rs"
            ],
            "problemMatcher": [],
            "group": "build",
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo build --release",
            "problemMatcher": ["$rustc"],
